<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_bg"
    tools:context=".ScoresActivity">

    <ScrollView
        android:layout_width="293dp"
        android:layout_height="429dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center"
                android:text="Game Description"
                android:textColor="@color/theme_blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When the game begins, you will be greeted with a 3 by 3 grid of buttons.  Simon will then proceed to indicate which button he would like you to press by turning the button from blue to white.  In order to move on to the next round, you simply have to push the same button that Simon did.  The following rounds after, Simon will continue to add a new button to his sequence one round at a time until you are no longer able to recall the exact sequence that Simon provided.  How many rounds can you last with Simon?"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center"
                android:text="Developer and Project Background"
                android:textColor="@color/theme_blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My name is Nate Agcaoili and I am a junior Computer Science major at Georgia Southern University.  In the spring semester of 2021, I took a course offered by GSU titled Handled/Ubiquitous Computing.  Under the instruction of Dr. Hong Zhang, I learned about the development lifecycle of Android applications using Android Studio as the Integrated Development Environment and Java as the primary programming language.  I decided to begin the development process of Simon Says when it was announced that the course final would be to create an Android app that demonstrates what we have learned throughout the course.  Simon Says utilizes Multithreading via AsyncTask, database functionality via SQLite, and many other key aspects of mobile app development."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center"
                android:text="Tools and Technologies Used"
                android:textColor="@color/theme_blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="261dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/androidstudio_icon" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="129dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/java_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As mentioned earlier, Simon Says was developed using the Android Studio IDE and Java as the primary programming language."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="261dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/photoshop_icon" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="129dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/flstudio_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All image and audio assets are original contributions by me.  All images were created using Adobe Photoshop and audio from the game were created in FL Studio."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center"
                android:text="Learn More"
                android:textColor="@color/theme_blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source code and documentation for this application is available on my GitHub. (Linked below)"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:padding="2dp"
                android:onClick="repositoryClick"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/github_btn" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/mainMenuButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="304dp"
        android:layout_height="90dp"
        android:onClick="menuClick"
        android:padding="2dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:srcCompat="@drawable/menu_btn3" />
</androidx.constraintlayout.widget.ConstraintLayout>